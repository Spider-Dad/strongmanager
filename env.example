# Токен бота Telegram (получить у @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# URL API для Google Apps Script
API_URL=your_api_gas_here

# Интервал проверки уведомлений (в секундах) для dev
POLLING_INTERVAL=60

# Интервал проверки уведомлений (в секундах) для prod
POLLING_INTERVAL=300

# Окружение: dev или prod
SERVER_ENV=dev

# Webhook settings (для prod)
WEBHOOK_HOST=your_domain
WEBHOOK_PATH=/webhook

# Admin user IDs (comma separated)
ADMIN_IDS=your_telegram_id

# Интервал автоматической синхронизации БД в минутах (0 = отключена)
SYNC_INTERVAL_MINUTES=60

# Путь к файлу сервисного аккаунта Google (по умолчанию: google_credentials.json)
GOOGLE_CREDENTIALS_PATH=google_credentials.json

# ID Google таблицы для синхронизации
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here

# ===== НАСТРОЙКИ ТАЙМАУТОВ И RETRY =====

# HTTP таймауты (в секундах)
HTTP_TIMEOUT=30
HTTP_CONNECT_TIMEOUT=10

# Настройки retry для API запросов
MAX_RETRIES=3
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=60.0

# Настройки retry для синхронизации Google Sheets
SYNC_MAX_RETRIES=3
SYNC_RETRY_BASE_DELAY=2.0
SYNC_RETRY_MAX_DELAY=120.0

# ===== НАСТРОЙКИ СИНХРОНИЗАЦИИ GOOGLE SHEETS =====
# Список листов, которые читать во время синхронизации (через запятую).
# Если не задано, используется полный набор:
# mentors,students,mapping,trainings,lessons,logs,notifications,webhook_raw_log,debug_log
# Пример: SYNC_SHEETS=mentors,students,mapping,trainings,lessons
SYNC_SHEETS=

# Длинная задержка при ответе 429 (RATE LIMIT) в секундах для retry-логики
# Если не задано, используется 90 секунд
RATE_LIMIT_BACKOFF_SECONDS=90

# ===== НАСТРОЙКИ ЛОГИРОВАНИЯ =====

# Уровни логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO          # Уровень для обычных логов
ERROR_LOG_LEVEL=WARNING # Уровень для файла ошибок

# Периоды хранения логов (в днях)
LOG_RETENTION_DAYS=7    # Файлы логов (dev: 7, prod: 30)
DB_LOG_RETENTION_DAYS=30 # Записи в БД (dev: 30, prod: 90)

# Интервал очистки старых логов (в часах)
LOG_CLEANUP_INTERVAL_HOURS=24

# ===== флаг GRADEBOOK =====
GRADEBOOK_ENABLED=true  # true - включен, false - выключен